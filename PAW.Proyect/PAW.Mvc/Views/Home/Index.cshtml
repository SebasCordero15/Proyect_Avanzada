@{
    ViewData["Title"] = "Inicio - Tablero Kanban";
}

<style>
    body {
        margin: 0;
        font-family: 'Inter', 'Segoe UI', sans-serif;
        background-color: #f9fafb;
    }

    .topbar {
        background-color: #1f2937;
        color: #fff;
        padding: 16px 32px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

        .topbar h1 {
            font-size: 22px;
            font-weight: 500;
            margin: 0;
        }

    .user-info {
        font-size: 14px;
        opacity: 0.8;
    }

    .kanban-board {
        display: flex;
        gap: 24px;
        padding: 40px 32px;
        overflow-x: auto;
    }

    .column {
        background-color: #f3f4f6;
        border-radius: 12px;
        width: 300px;
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    .column-title {
        font-size: 18px;
        font-weight: 600;
        color: #111827;
        margin-bottom: 16px;
    }

    .card {
        background-color: #ffffff;
        border-radius: 8px;
        padding: 14px 16px;
        margin-bottom: 12px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.06);
        transition: transform 0.15s ease;
        color: #1f2937;
    }

        .card:hover {
            transform: scale(1.01);
            cursor: pointer;
            background-color: #f9fafb;
        }

    .add-task {
        margin-top: auto;
        color: #6b7280;
        font-size: 14px;
        text-align: center;
        padding: 8px;
        border-radius: 6px;
        background-color: transparent;
        transition: background-color 0.2s;
    }

        .add-task:hover {
            background-color: #e5e7eb;
            cursor: pointer;
        }

    /* Scrollbar elegante */
    .kanban-board::-webkit-scrollbar {
        height: 8px;
    }

    .kanban-board::-webkit-scrollbar-thumb {
        background-color: #d1d5db;
        border-radius: 4px;
    }

    .kanban-board::-webkit-scrollbar-track {
        background: transparent;
    }
</style>

<!-- Encabezado superior -->
<div class="topbar">
    <h1>Proyecto Web</h1>
    <div class="user-info">lucia.martinez@gmail.com</div>
</div>

<!-- Tablero Kanban -->
<div class="kanban-board">
    <!-- Columna: Por hacer -->
    <div class="column">
        <div class="column-title">Por hacer</div>
        <div class="card">Analizar requerimientos del cliente</div>
        <div class="card">Definir estructura de base de datos</div>
        <div class="card">Diseñar wireframes</div>
        <div class="add-task">+ Agregar tarjeta</div>
    </div>

    <!-- Columna: En proceso -->
    <div class="column">
        <div class="column-title">En proceso</div>
        <div class="card">Implementar login y registro</div>
        <div class="card">Conectar frontend con backend</div>
        <div class="add-task">+ Agregar tarjeta</div>
    </div>

    <!-- Columna: Completado -->
    <div class="column">
        <div class="column-title">Completado</div>
        <div class="card">Setup inicial del proyecto</div>
        <div class="card">Integración con GitHub</div>
        <div class="add-task">+ Agregar tarjeta</div>
    </div>
</div>
