@{
    ViewData["Title"] = "PAW Trello";
}

<section class="hero">
    <div class="container text-center py-5">
        <h1 class="display-5 fw-bold mb-3">PAW Trello</h1>
        <p class="lead text-muted mb-4">
            Organiza tus tareas con tableros, listas y tarjetas.
        </p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a class="btn btn-primary btn-lg" href="~/Boards/Index">Ver tableros</a>
            <a class="btn btn-outline-secondary btn-lg" href="~/Board/Index/1">Abrir Tablero #1</a>
        </div>
    </div>
</section>

<section class="container py-4">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature p-4">
                <h5 class="mb-2">Listas</h5>
                <p class="text-muted mb-0">Agrupa tareas por etapas como Pendiente, En curso, Hecho.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature p-4">
                <h5 class="mb-2">Tarjetas</h5>
                <p class="text-muted mb-0">Crea, elimina y describe cada tarea dentro de una lista.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature p-4">
                <h5 class="mb-2">Rápido & simple</h5>
                <p class="text-muted mb-0">Interfaz limpia con acciones esenciales al alcance.</p>
            </div>
        </div>
    </div>
</section>

<style>
    .hero {
        background: radial-gradient(1200px 600px at 20% -10%, #e8f0ff, transparent), radial-gradient(800px 400px at 90% 0, #ffe9f2, transparent);
    }

    .feature {
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        background: #fff;
        box-shadow: 0 8px 24px rgba(0,0,0,.05);
    }
</style>
