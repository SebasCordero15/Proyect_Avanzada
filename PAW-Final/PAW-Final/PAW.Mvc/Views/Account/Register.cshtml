@model PAW.Models.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container py-5" style="max-width: 480px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <i class="bi bi-person-plus" style="font-size:2rem;opacity:.8"></i>
                <h4 class="mt-2 mb-0">Crear cuenta</h4>
                <div class="text-muted">Complete los datos para registrarse</div>
            </div>

            <form asp-action="Register" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" type="email" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Clave" class="form-label"></label>
                    <input asp-for="Clave" class="form-control" type="password" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>

                <button class="btn btn-success w-100">Registrarse</button>

                <div class="mt-3 text-center">
                    <small>¿Ya tienes cuenta? <a asp-action="Login">Inicia sesión</a></small>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
