@model PAW.Mvc.Controllers.RegisterVm
@{
    ViewData["Title"] = "Crear cuenta";
}
<div class="auth-wrap container d-flex align-items-center justify-content-center py-5">
    <div class="card shadow-sm p-4 auth-card">
        <h3 class="mb-3 text-center">Crear cuenta</h3>
        <form asp-action="Register" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" placeholder="tu@correo.com" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Clave" class="form-label"></label>
                <input asp-for="Clave" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmarClave" class="form-label"></label>
                <input asp-for="ConfirmarClave" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100">Crear cuenta</button>
            @Html.AntiForgeryToken()
        </form>

        <div class="text-center mt-3">
            ¿Ya tienes cuenta? <a asp-action="Login">Iniciar sesión</a>
        </div>
    </div>
</div>
<style>
    .auth-card {
        max-width: 520px;
        width: 100%;
        border-radius: 16px
    }

    .auth-wrap {
        min-height: 70vh
    }</style>
