@model PAW.Models.ViewModels.UsuarioViewModel
@{
    ViewData["Title"] = "Registro";
}

<style>
    .auth-bg {
        background: radial-gradient(1200px 800px at 20% -10%, rgba(13,110,253,.08), transparent 60%), radial-gradient(1000px 600px at 120% 110%, rgba(32,201,151,.08), transparent 60%), var(--bs-body-bg);
    }

    .brand-badge {
        width: 56px;
        height: 56px;
        display: grid;
        place-items: center;
        border-radius: 14px;
        background: linear-gradient(135deg, rgba(13,110,253,.12), rgba(32,201,151,.12));
        color: var(--bs-success);
    }

    .form-label small {
        color: var(--bs-secondary-color);
    }
</style>

<div class="auth-bg min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-11 col-sm-9 col-md-7 col-lg-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4 p-md-5">

                        <!-- Encabezado -->
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="brand-badge">
                                <i class="bi bi-person-plus" style="font-size:1.4rem;"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">Crear cuenta</h4>
                                <div class="text-muted">Complete los datos para registrarse</div>
                            </div>
                        </div>

                        <!-- Resumen de validación -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <form asp-action="Register" method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <!-- Nombre -->
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label">
                                    Nombre y apellidos
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Nombre" class="form-control" autocomplete="name" />
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <!-- Correo -->
                            <div class="mb-3">
                                <label asp-for="Correo" class="form-label">
                                    Correo electrónico <small>(tu@correo.com)</small>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Correo" class="form-control" type="email" inputmode="email" autocomplete="email" />
                                </div>
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                            </div>

                            <!-- Clave -->
                            <div class="mb-1">
                                <label asp-for="Clave" class="form-label">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Clave" class="form-control" type="password" id="pwdInput" autocomplete="new-password" />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePwd" aria-label="Mostrar u ocultar contraseña">
                                        <i class="bi bi-eye" id="togglePwdIcon"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Clave" class="text-danger small"></span>
                            </div>
                            <div class="form-text mb-3">Usa al menos 8 caracteres (recomendado combinar letras y números).</div>

                            <button class="btn btn-success w-100 py-2" type="submit">
                                Registrarse
                            </button>

                            <div class="mt-4 text-center">
                                <small class="text-muted">
                                    ¿Ya tienes cuenta?
                                    <a asp-action="Login" class="link-primary">Inicia sesión</a>
                                </small>
                            </div>
                        </form>

                    </div>
                </div>

                <div class="text-center text-muted mt-3" style="font-size:.85rem;">
                    © @DateTime.Now.Year PAW Board
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const btn = document.getElementById('togglePwd');
            const icon = document.getElementById('togglePwdIcon');
            const input = document.getElementById('pwdInput');
            if (!btn || !icon || !input) return;

            btn.addEventListener('click', () => {
                const isPwd = input.getAttribute('type') === 'password';
                input.setAttribute('type', isPwd ? 'text' : 'password');
                icon.classList.toggle('bi-eye');
                icon.classList.toggle('bi-eye-slash');
            });
        })();
    </script>
}
