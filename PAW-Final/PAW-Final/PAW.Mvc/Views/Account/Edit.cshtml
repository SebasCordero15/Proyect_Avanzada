@model PAW.Models.ViewModels.UsuarioEditViewModel
@{
    ViewData["Title"] = "Editar perfil";
}

<div class="container py-3" style="max-width: 680px;">
    <h2 class="mb-3">Editar perfil</h2>

    @if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <form asp-action="Edit" method="post" class="card shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2 bg-white">
            <a asp-controller="Board" asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
