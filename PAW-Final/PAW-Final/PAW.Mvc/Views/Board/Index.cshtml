@model List<PAW.Mvc.Controllers.BoardsIndexVm>
@{
    ViewData["Title"] = "Tableros";
}
<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Tableros</h2>
        <form asp-action="Add" method="post" class="d-flex gap-2">
            <input class="form-control" name="titulo" placeholder="Nuevo tablero..." />
            <button class="btn btn-primary">Crear</button>
            @Html.AntiForgeryToken()
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <p class="mb-2">Aún no hay tableros.</p>
            <p>Usa el formulario de arriba para crear el primero.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var b in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="board-card p-4 h-100 d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="mb-2">@b.Titulo</h5>
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@b.Id" />
                                <button class="btn btn-sm btn-link text-danger" title="Eliminar">✕</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </div>
                        <div class="text-muted small mb-3">
                            <span class="me-3">Listas: <strong>@b.CantListas</strong></span>
                            <span>Tarjetas: <strong>@b.CantTarjetas</strong></span>
                        </div>
                        <div class="mt-auto">
                            <a class="btn btn-outline-primary w-100" href="~/Board/Index/@b.Id">Abrir tablero</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .board-card {
        border: 1px solid #e5e7eb;
        border-radius: 16px;
        background: #fff;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        transition: transform .15s ease, box-shadow .15s ease;
    }

        .board-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 40px rgba(0,0,0,.10);
        }
</style>
