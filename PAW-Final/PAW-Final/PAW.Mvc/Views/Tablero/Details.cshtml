@model PAW.Models.ViewModels.TableroViewModel
@{
    ViewData["Title"] = "Detalle de tablero";
}
<h2>@Model.Titulo</h2>
<p class="text-muted">Creado: @Model.FechaCreacion?.ToString("dd/MM/yyyy")</p>
<div class="d-flex gap-2">
    <a class="btn btn-primary btn-sm" asp-controller="Board" asp-action="Details" asp-route-id="@Model.Id">Abrir en Board</a>
    <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Volver</a>
</div>

